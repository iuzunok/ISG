@using ISGWebSite.Models
@model LoginViewModel

@{
    ViewBag.Title = "Giriş";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <ul class="list-group">
            <li class="list-group-item active">Sisteme Giriş</li>
            <li class="list-group-item">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.KullaniciAd, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.KullaniciAd, new { @Value = "iuzunok@argemyazilim.com", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.KullaniciAd, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Sifre, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Sifre, new { @Value = "123", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Sifre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.KullaniciAdimiHatirla)
                                    @Html.LabelFor(m => m.KullaniciAdimiHatirla)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Giriş" class="btn btn-default" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <p>
                                    @Html.ActionLink("Şifremi unuttum", "ForgotPassword")
                                </p>
                            </div>
                        </div>
                    }
                </section>
            </li>
        </ul>
    </div>
    <div class="col-md-6">
        <section id="socialLoginForm">
            <ul class="list-group">
                <li class="list-group-item">Uyarı bir</li>
                <li class="list-group-item">Uyarı 2</li>
                <li class="list-group-item">Uayrı 3</li>
            </ul>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}