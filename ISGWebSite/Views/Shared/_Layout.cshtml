<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - İSG</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div ng-app="ngaGenel" ng-controller="ngcGenel">

        <div class="ArkaPlanGizleGoster" ng-show="ArkaPlaniAcikMi">
            <div class="progress ArkaPlanProgress" style="width:400px; height:50px">
                <div class="progress-bar progress-bar-striped active progress-bar-animated" role="progressbar" style="width: 100%;">
                    <span style="font-size:20px">
                        İşlem sürüyor...
                    </span>
                </div>
            </div>
        </div>

        <div class="container-fluid body-content">

            <nav class="navbar navbar-expand-sm navbar-light bg-light EnUstBaslik">
                <div>
                    <span class="fa fa-user" style="padding-right:10px"></span>@(Session["OpKullaniciAd"].ToString() + " " + Session["OpKullaniciSoyad"].ToString())
                    (Satınalma Şb Md)
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto"></ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item EnUstBaslikHucre">
                            <a class="nav-item nav-link mr-md-0" href="#" id="umBekleyenGorevler" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fa fa-bell fa-fw fa-fcBey"></span>
                                <span class="badge badge-danger">5</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="umBekleyenGorevler" style="margin-right:3px; width:250px">
                                <a class="dropdown-item" href="#">İmza Bekleyen</a>
                                <a class="dropdown-item" href="#">Paraf Bekleyen</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Tamir Edilmeyi Bekleyen</a>
                                <a class="dropdown-item" href="#">Tamir Edilip Onay Bekleyen</a>
                            </div>
                        </li>
                        <li class="nav-item EnUstBaslikHucre">
                            <a class="nav-item nav-link" href="#" id="umGelenMesajlar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fa fa-envelope fa-fw fa-fcBey"></span>
                                <span class="badge badge-danger">7</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="umGelenMesajlar" style="margin-right:3px;width:250px">
                                <a class="dropdown-item" href="#">Sistem kullanıma açıldı</a>
                                <a class="dropdown-item" href="#">Sertifika başvuruluarı başladı</a>
                            </div>
                        </li>
                        <li class="nav-item EnUstBaslikHucre">
                            <a class="nav-item nav-link" href="/Yetki/Login/AnaSayfa" aria-haspopup="true" aria-expanded="false">
                                <span class="fa fa-home fa-fw fa-fcBey"></span>
                            </a>
                        </li>
                        <li class="nav-item EnUstBaslikHucre">
                            <a class="nav-item nav-link" href="/Yetki/Login/LogOff" aria-haspopup="true" aria-expanded="false">
                                <span class="fa fa-sign-out fa-fw fa-fcBey"></span>
                            </a>
                        </li>
                    </ul>

                </div>
            </nav>

            <nav class="navbar navbar-expand-sm navbar-light bg-light Menu">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kullanıcı İşlemleri
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li>
                                    @Html.ActionLink("Kullanıcı İşlemleri", "KullaniciAra", "Kullanici", new { area = "Yetki" }, new { @class = "dropdown-item" })
                                </li>
                                <li><a class="dropdown-item" href="#">Rol İşlemleri</a></li>
                                <li>
                                    <a class="dropdown-item dropdown-toggle" href="#">Yetki İşlemleri</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">Yetki Grup İşlemleri</a></li>
                                        <li><a class="dropdown-item" href="#">Menu İşlemleri</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Standart
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li>
                                    <a class="dropdown-item" href="#">Yetkilerim</a>
                                </li>
                                <li>
                                    <div class="dropdown-divider"></div>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Şifre Değiştir</a>
                                </li>
                                <li>
                                    <a class="dropdown-item dropdown-toggle" href="#">Sertifikalarım</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">E-İmza Sertifikalarım</a></li>
                                        <li><a class="dropdown-item" href="#">Alt Sertifika</a></li>
                                        <li>
                                            <a class="dropdown-item dropdown-toggle" href="#">Alt Alt Sertifika</a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="#">Alt alt sertifika detay1</a></li>
                                                <li><a class="dropdown-item" href="#">Alt alt sertifika detay2</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </nav>

        </div>

        <div class="container-fluid body-content">

            @RenderBody()
            <br />
            <br />
            <footer>
                <div style="padding-left:20px; padding-right:20px">
                    <p>&copy; @DateTime.Now.Year - Argem Yazılım ve Danışmanlık Ticaret Ltd.Şti</p>
                </div>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")

    @Scripts.Render("~/bundles/JS/Excel")
    @Scripts.Render("~/bundles/Scripts/pdfmake")

    @Scripts.Render("~/bundles/JS/Genel")

    @RenderSection("scripts", required: false)

</body>
</html>
