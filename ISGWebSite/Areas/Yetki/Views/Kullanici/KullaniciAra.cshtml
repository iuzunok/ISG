@{
    ViewBag.Title = "Kullanıcı İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="SayfaBaslik">
    <a href="#" class="anchorYeniKayit" data-durum="I" data-sayfaad="Yeni Kullanıcı Kayıt">
        <span class="fa fa-pencil-square-o" style="padding-right:5px"></span>Yeni Kullanici Kayıt
    </a>
    <div style="float:right">
        Kullanıcı İşlemleri
    </div>
</div>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="border">
    <form id="kullaniciAra" name="kullaniciAra" ng-submit="KullaniciAra()">
        <table class="table table-borderless table-sm">
            <tbody>
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="txtKullaniciAd">Kullanıcı Adı :</label>
                            <input type="text" name="txtKullaniciAd" ng-model="KullaniciModelAra.KullaniciAd" class="form-control" />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="txtAd">Adı :</label>
                            <input type="text" name="txtAd" ng-model="KullaniciModelAra.Ad" class="form-control" />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="txtSoyad">Soyadı :</label>
                            <input type="text" name="txtSoyad" ng-model="KullaniciModelAra.Soyad" class="form-control" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label for="ddlKullaniciTipNo">Tipi :</label>
                            <select name="ddlKullaniciTipNo" ng-model="KullaniciModelAra.KullaniciTipNo"
                                    ng-options="T.LookNo as T.UzunAd for T in KullaniciModelAra.KullaniciTipNolar" class="form-control"></select>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="ddlAktifPasifTipNo">Durumu :</label>
                            <select name="ddlKullaniciTipNo" ng-model="KullaniciModelAra.AktifPasifTipNo"
                                    ng-options="T.LookNo as T.UzunAd for T in KullaniciModelAra.AktifPasifTipNoNolar" class="form-control"></select>
                        </div>
                    </td>
                    <td style="vertical-align:middle">
                        <button type="submit" class="btn btn-primary">
                            <span class="fa fa-search" style="padding-right:15px"></span>Ara
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

<table class="table table-bordered table-sm">
    <tr>
        <th style="width:50px">S.No</th>
        <th>Kullanıcı Adı</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Tipi</th>
        <th>Durumu</th>
        <th style="width:25px"></th>
        <th style="width:25px"></th>
        <th style="width:25px"></th>
    </tr>
    <tr ng-show="KullaniciModelAraSonuc.length" ng-repeat="KM in KullaniciModelAraSonuc" ng-class-even="'even'" ng-class-odd="'odd'">
        <td>{{$index+1}}</td>
        <td>{{KM.KullaniciAd}}</td>
        <td>{{KM.Ad}}</td>
        <td>{{KM.Soyad}}</td>
        <td>{{KM.KullaniciTipNoUzunAd}}</td>
        <td>{{KM.AktifPasifTipNoUzunAd}}</td>
        <td>
            <img src="~/Resim/Ortak/Guncelle.png" ng-click="RCGu(KM.KullaniciKey)" />
        </td>
        <td>
            <img src="~/Resim/Ortak/Detay.png" ng-click="RCOk(KM.KullaniciKey)" />
        </td>
        <td>
            <img src="~/Resim/Ortak/Sil.png" ng-click="RCSi(KM.KullaniciKey)" />
        </td>
    </tr>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Önceki</span>
            </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Sonraki</span>
            </a>
        </li>
    </ul>
</nav>

