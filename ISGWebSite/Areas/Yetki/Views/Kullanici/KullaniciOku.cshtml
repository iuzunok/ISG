@model ISGWebSite.Models.Yetki.Kullanici.KullaniciModel

@{
    if (Model != null && Model.IslemDurum!="H")
    {
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.KullaniciAd)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.KullaniciAd)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ad)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Ad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Soyad)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Soyad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.KullaniciTipNoUzunAd)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.KullaniciTipNoUzunAd)
                </dd>

                @if (Model.IslemDurum == "D")
                {
                    <dt></dt>
                    <dd>
                        <button class="btn btn-danger">
                            @Html.ActionLink("Sil", "KullaniciSil", "Kullanici", new { area = "Yetki" }, new { @class = "text-white" })
                        </button>
                    </dd>
                }

            </dl>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            Kullanıcı kaydına ulaşılamadı
        </div>
    }
}