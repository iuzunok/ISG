@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
        
    <div class="col-sm-6">
        <div class="card">
            <h5 class="card-header Kusak">Favori İşlemler</h5>
            <div class="card-body">

                <ul class="list-group">
                    <li class="list-group-item py-2 KusakSagSol">
                        <span class="fa fa-star" style="padding-right:10px"></span>@Html.ActionLink("Kullanıcı İşlemleri", "KullaniciAra", "Kullanici", new { area = "Yetki" }, new { })
                    </li>
                    <li class="list-group-item py-2 KusakSagSol">
                        <span class="fa fa-star" style="padding-right:10px"></span>@Html.ActionLink("Yetki Grup İşlemleri", "YetkiGrupAra", "YetkiGrup", new { area = "Yetki" }, new { })
                    </li>
                    <li class="list-group-item py-2 KusakSagSol">
                        <span class="fa fa-star" style="padding-right:10px"></span>@Html.ActionLink("Kullanıcı Yetki İşlemleri", "YetkiVer", "Kullanici", new { area = "Yetki" }, new { })
                    </li>
                    <li class="list-group-item py-2 divider KusakSagSol"></li>
                    <li class="list-group-item py-2 KusakAlt"></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-sm-6">

        <div class="card">
            <h5 class="card-header Kusak">Sistem  Uyarıları</h5>
            <div class="card-body">


                <ul class="list-group">
                    <li class="list-group-item KusakSagSol">
                        <p>
                            <a data-toggle="collapse" href="#LMA1" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <span class="fa fa-bell" style="padding-right:5px"></span>
                                Argem İSG modülü 01.01.2019 tarihi ile kullanıma açıldı
                            </a>
                        </p>
                        <div class="collapse" id="LMA1" style="padding-left:20px">
                            Argem İSG modülü 01.01.2019 tarihi ile kullanıma açıldı
                        </div>
                    </li>
                    <li class="list-group-item KusakSagSol">
                        <p>
                            <a data-toggle="collapse" href="#LMA2" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <span class="fa fa-bell-o" style="padding-right:5px"></span>Teknik denetçi raporu için tıklayınız
                            </a>
                        </p>
                        <div class="collapse" id="LMA2" style="padding-left:20px">
                            Teknik denetçi raporu için tıklayınız
                        </div>
                    </li>
                    <li class="list-group-item KusakAlt">
                        <p>
                            <a data-toggle="collapse" href="#LMA3" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <span class="fa fa-bell" style="padding-right:5px"></span>Eğitime başvuruları başladı. Sistem giriş yapıp eğitim başvurusunu onaylayınız.
                            </a>
                        </p>
                        <div class="collapse" id="LMA3" style="padding-left:20px">
                            Eğitime başvuruları başladı. Sistem giriş yapıp eğitim başvurusunu onaylayınız.
                        </div>
                    </li>
                </ul>

            </div>

        </div>

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/JSNG/Yetki/AnaSayfa")
}